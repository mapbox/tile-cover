{
  "rules": {
    "strict": [0, "global"],
    "eqeqeq": 2,
    "consistent-return": 2,
    "no-loop-func": 2,

    "no-use-before-define": [2, "nofunc"],
    "no-lonely-if": 2,
    "no-else-return": 2,
    "no-new": 2,
    "no-throw-literal": 2,
    "no-self-compare": 2,
    "no-void": 2,
    "no-eq-null": 2,

    "quotes": [2, "single"],
    "indent": 2,
    "camelcase": 0,
    "comma-style": 2,
    "comma-spacing": 2,
    "key-spacing": 2,
    "new-cap": 2,
    "no-empty": 2,
    "brace-style": 2,
    "wrap-iife": 2,
    "space-in-parens": 2,
    "space-before-blocks": 2,
    "keyword-spacing": 2,
    "space-infix-ops": 2,
    "space-unary-ops": 2,
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "array-bracket-spacing": 2
  },
  "env": {
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended"
}
